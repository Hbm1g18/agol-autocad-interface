<Window x:Class="ArcGisAutoCAD.SimplePromptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Input" Height="140" Width="350" WindowStartupLocation="CenterOwner">
    <StackPanel Margin="10">
        <TextBlock x:Name="PromptText" Margin="0,0,0,5"/>
        <TextBox x:Name="InputBox" Margin="0,0,0,10"/>
        <Button Content="OK" Width="60" HorizontalAlignment="Right" Click="OK_Click"/>
    </StackPanel>
</Window>
