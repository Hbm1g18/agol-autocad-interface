<Window x:Class="ArcGisAutoCAD.AppendixTemplateManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Appendix Template Manager" Height="300" Width="450">
    <DockPanel Margin="10">
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="Add" Width="60" Click="Add_Click" Margin="0,0,5,0"/>
            <Button Content="Edit" Width="60" Click="Edit_Click" Margin="0,0,5,0"/>
            <Button Content="Remove" Width="60" Click="Remove_Click"/>
        </StackPanel>
        <ListBox x:Name="TemplatesList" DisplayMemberPath="Name"/>
    </DockPanel>
</Window>
